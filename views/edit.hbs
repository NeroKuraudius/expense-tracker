<div class="form-container m-3" style="display:flex;justify-content:center;">
  <form action="/expense/{{item._id}}?_method=PUT" method="POST" style="item-align:center">
    <div class="container">

      <div class="mt-5" style="display:flex;justify-content:space-around">
        <div class="pt-3">
          <a style="font-size: x-small;">*為必填欄位</a>
        </div>
        <div style="display:flex;justify-content:center">
          <h4>請輸入支出項目</h4>
        </div>
      </div>

      <div class="mt-3 mb-3">
        <label for="name" class="me-4">名稱*：</label>
        <input type="text" id="name" name="name" style="width:220px" value="{{item.name}}" required>
      </div>

      <div class="mt-5 mb-3">
        <label for="date" class="me-4">日期*：</label>
        <input type="date" id="date" name="date" style="width:220px" value="{{item.date}}" required>
      </div>

      <div class="mt-5 mb-3">
        <label for="category" class="me-4">類別*：</label>
        <select type="text" id="category" name="category" style="width:220px" required>
          <option hidden disabled selected>{{item.category}}</option>
          <option>家居物業</option>
          <option>交通出行</option>
          <option>休閒娛樂</option>
          <option>餐飲食品</option>
          <option>其他</option>
        </select>
      </div>

      <div class="mt-5 mb-3">
        <label for="cost" class="me-4">金額*：</label>
        <input type="number" id="cost" name="cost" style="width:220px" value="{{item.cost}}" required>
      </div>

      <div class="mb-3" style="display:flex;justify-content:center">
        <button class="btn btn-outline-warning mt-3" type="submit">修改</button>
      </div>
    </div>
  </form>
</div>