<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body" style="background-color: rgb(220, 245, 174);">
      <h1 class="text-center mt-3" style="font-weight:bold">Login</h1>
      {{> message }}
      <form action="/users/login" method="POST">
        <div class="mb-3">
          <label for="email" class="mb-2">Email</label>
          <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email">
        </div>
        <div class="mb-3">
          <label for="password" class="mb-2">Password</label>
          <input type="password" id="password" name="password" class="form-control" placeholder="Enter Password">
        </div>
        <button type="submit" class="btn btn-primary btn-block">Login</button>
        <a href="./auth/facebook" class="btn btn-info btn-block">Facebook Login</a>
      </form>
      <p class="lead mt-4" style="font-size:medium">
        No Account? <a href="./users/register">Register</a>
      </p>
    </div>
  </div>
</div>