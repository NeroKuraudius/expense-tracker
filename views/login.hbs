<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body" style="background-color: rgb(220, 245, 174);">
      <h1 class="text-center mt-3" style="font-weight:bold">使用者登入</h1>
      {{> message }}
      <form action="/users/login" method="POST">
        <div class="mb-3">
          <label for="email" class="mb-2">電子郵件</label>
          <input type="email" id="email" name="email" class="form-control" placeholder="請輸入電子郵件">
        </div>
        <div class="mb-3">
          <label for="password" class="mb-2">密碼</label>
          <input type="password" id="password" name="password" class="form-control" placeholder="請輸入密碼">
        </div>
        <button type="submit" class="btn btn-primary btn-block">登入</button>
        <a href="./auth/facebook" class="btn btn-info btn-block">Facebook登入</a>
      </form>
      <p class="lead mt-4" style="font-size:medium">
        沒有帳號嗎? <a href="./users/register">點此註冊</a>
      </p>
    </div>
  </div>
</div>