<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body" style="background-color: rgb(220, 245, 174);">
      <h1 class="text-center mt-3" style="font-weight:bold">註冊</h1>
      {{> message }}
      <form action="/users/register" method="POST">
        <div class="mb-3">
          <label for="name" class="mb-2">姓名</label>
          <input type="text" id="name" name="name" class="form-control" placeholder="請輸入姓名" value="{{name}}">
        </div>
        <div class="mb-3">
          <label for="email" class="mb-2">電子郵件</label>
          <input type="email" id="email" name="email" class="form-control" placeholder="請輸入電子郵件" value="{{email}}">
        </div>
        <div class="mb-3">
          <label for="password" class="mb-2">密碼</label>
          <input type="password" id="password" name="password" class="form-control" placeholder="請輸入密碼"
            value="{{password}}">
        </div>
        <div class="mb-3">
          <label for="confirmPassword" class="mb-2">確認密碼</label>
          <input type="password" id="confirmPassword" name="confirmPassword" class="form-control"
            placeholder="請再輸入一次密碼" value="{{confirmPassword}}">
        </div>
        <button type="submit" class="btn btn-primary btn-block">送出</button>
        <a href="./auth/facebook" class="btn btn-info btn-block">Facebook登入</a>
      </form>
      <p class="lead mt-4" style="font-size:medium">
        已有帳號? <a href="/users/login">點我登入</a>
      </p>
    </div>
  </div>
</div>